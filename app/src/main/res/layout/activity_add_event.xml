<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create New Event"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:drawableStart="@android:drawable/ic_menu_add"
                    android:drawableTint="@color/accent_red"
                    android:drawablePadding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fill in event details below"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Image Preview Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imgPreview"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@color/surface_dark"
                    android:scaleType="centerCrop"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Poster Image"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/surface_dark"
                    app:strokeColor="@color/accent_red"
                    app:strokeWidth="2dp"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_gallery"
                    app:iconTint="@color/accent_red"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Event Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Event Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Event Title"
                    app:boxBackgroundColor="@color/surface_dark"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/text_hint"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEventTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="textCapWords"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date & Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surface_dark"
                        app:cardCornerRadius="12dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Date"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="16dp"
                            android:drawableStart="@android:drawable/ic_menu_my_calendar"
                            android:drawableTint="@color/accent_red"
                            android:drawablePadding="12dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surface_dark"
                        app:cardCornerRadius="12dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Time"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:padding="16dp"
                            android:drawableStart="@android:drawable/ic_menu_recent_history"
                            android:drawableTint="@color/accent_red"
                            android:drawablePadding="12dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Venue -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Venue / Location"
                    app:boxBackgroundColor="@color/surface_dark"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/text_hint"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVenue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="textCapWords"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Event Description"
                    app:boxBackgroundColor="@color/surface_dark"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/text_hint"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEventDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="textMultiLine"
                        android:minLines="4"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Reg. Limit"
                        app:boxBackgroundColor="@color/surface_dark"
                        app:boxStrokeColor="@color/accent_red"
                        app:hintTextColor="@color/text_hint"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRegLimit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="Entry Fee ($)"
                        app:boxBackgroundColor="@color/surface_dark"
                        app:boxStrokeColor="@color/accent_red"
                        app:hintTextColor="@color/text_hint"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEntryFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Duration -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Attendance Duration (minutes)"
                    app:boxBackgroundColor="@color/surface_dark"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/text_hint"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Budget -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Club Budget Allocation ($)"
                    app:boxBackgroundColor="@color/surface_dark"
                    app:boxStrokeColor="@color/accent_red"
                    app:hintTextColor="@color/text_hint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEventBudget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Publish Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Publish Event"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:backgroundTint="@color/accent_red"
            app:cornerRadius="16dp"
            app:elevation="6dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>