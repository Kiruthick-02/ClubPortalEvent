<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Event Poster - no gradient overlay, just dimming via View -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/imgPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"/>

            <!-- Simple dark overlay instead of gradient -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="bottom"
                android:background="#AA000000"/>
        </FrameLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title & Club Name -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txtClubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organized by: Club Name"
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="@color/accent_red"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <!-- Info Cards Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Date Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_dark"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Oct 2024"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATE"
                            android:textSize="9sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Venue Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface_dark"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_marginStart="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtVenueTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Main Hall"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VENUE"
                            android:textSize="9sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Fee & Limit Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/txtFeeLimit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Fee: $10 â€¢ Limit: 50"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_200"/>
            </LinearLayout>

            <!-- Stats Row - using CardView instead of custom background -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface_dark"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvViews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Views"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvInterestedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/green_success"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interested"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvNotInterestedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/red_error"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Int."
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ADMIN PANEL -->
            <LinearLayout
                android:id="@+id/layoutAdminControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/surface_dark"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManageAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attendance &amp; Registrations"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/orange_warning"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_my_calendar"
                    app:iconTint="@color/white"
                    android:layout_marginBottom="12dp"/>

                <!-- Admin Actions - using CardView for buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/surface_dark"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp"
                        android:layout_margin="6dp">

                        <ImageButton
                            android:id="@+id/btnTasks"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="@color/icon_tint"
                            android:contentDescription="Tasks"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/surface_dark"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp"
                        android:layout_margin="6dp">

                        <ImageButton
                            android:id="@+id/btnGallery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="@color/icon_tint"
                            android:contentDescription="Gallery"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/surface_dark"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp"
                        android:layout_margin="6dp">

                        <ImageButton
                            android:id="@+id/btnBudget"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="@color/icon_tint"
                            android:contentDescription="Budget"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/surface_dark"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp"
                        android:layout_margin="6dp">

                        <ImageButton
                            android:id="@+id/btnEdit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_menu_edit"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="@color/icon_tint"
                            android:contentDescription="Edit"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="@color/surface_dark"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp"
                        android:layout_margin="6dp">

                        <ImageButton
                            android:id="@+id/btnDelete"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@android:drawable/ic_menu_delete"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="@color/red_error"
                            android:contentDescription="Delete"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- STUDENT PANEL -->
            <LinearLayout
                android:id="@+id/layoutStudentControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Register Now"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    app:backgroundTint="@color/teal_200"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="@color/text_primary"
                    android:layout_marginBottom="12dp"/>

                <!-- Poll Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnInterested"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘ Interested"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/green_success"
                        app:cornerRadius="10dp"
                        android:layout_marginEnd="6dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNotInterested"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘Ž Not Int."
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/red_error"
                        app:cornerRadius="10dp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>

                <!-- Extra Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGalleryStudent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/purple_500"
                        app:cornerRadius="10dp"
                        app:strokeColor="@color/purple_700"
                        app:strokeWidth="1dp"
                        android:layout_marginEnd="6dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFeedback"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/teal_700"
                        app:cornerRadius="10dp"
                        app:strokeColor="@color/teal_200"
                        app:strokeWidth="1dp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>